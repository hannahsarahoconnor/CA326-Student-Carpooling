<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DriverProfile"
        android:background="@color/quantum_white_100"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/app_start"
                android:layout_width="match_parent"
                android:layout_height="670dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRIVER"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:textColor="@color/quantum_white_100"
                    android:textStyle="bold"
                    android:textSize="26sp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ProfilePic"
                    app:civ_border_width="2dp"
                    android:layout_marginTop="10dp"
                    app:civ_border_color="@color/quantum_white_100"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"/>
                <TextView
                    android:id="@+id/Name"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hannah O'Connor"
                    android:fontFamily="@font/amiko"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="21sp"/>

                <TextView
                    android:id="@+id/Username"
                    android:fontFamily="@font/amiko"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/College"
                    android:fontFamily="@font/amiko"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DCU"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="21sp"/>

                <RatingBar
                    android:id="@+id/rating"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:stepSize="0.1"
                    android:clickable="false"
                    android:layout_width="240dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.CardView
                    android:layout_width="400dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimaryDark"
                        android:weightSum="2">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ratings"
                                android:textStyle="bold"
                                android:fontFamily="@font/amiko"
                                android:textSize="20sp"
                                android:textColor="@color/quantum_white_100"
                                />
                            <TextView
                                android:id="@+id/RatingNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:fontFamily="@font/amiko"
                                android:textSize="20sp"
                                android:textColor="@color/quantum_white_100"/>

                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Trips Completed"
                                android:fontFamily="@font/amiko"
                                android:textSize="20sp"
                                android:textColor="@color/quantum_white_100"
                                />
                            <TextView
                                android:id="@+id/CompletedNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:fontFamily="@font/amiko"
                                android:textSize="20sp"
                                android:textColor="@color/quantum_white_100"
                                android:textStyle="bold"
                                android:paddingTop="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <Button
                    android:id="@+id/ConfirmPic"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/quantum_white_100"
                    android:text="Save New Pic"/>


                <Button
                    android:id="@+id/SwitchMode"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/quantum_white_100"
                    android:text="Switch User Mode"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <include
        layout="@layout/app_bar_driver_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_driver_main"
        app:menu="@menu/activity_driver_main_drawer"
        android:theme="@style/NavigationView"
        app:itemTextColor="@color/colorPrimary"
        app:itemIconTint="@color/colorPrimary"/>


</android.support.v4.widget.DrawerLayout>
