<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassengerHelp">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/bowlby_one_sc"
                android:text="Passenger Guide"
                android:textColor="@color/quantum_white_100"
                android:textSize="20sp" />



        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_marginTop="60dp"
            android:text="Messages"
            android:fontFamily="@font/amiko"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#B10C0C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="Shows a list of all active chats with other app users. Click on a user to launch the chat"
            android:fontFamily="@font/amiko"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="60dp"
            android:text="Profile"
            android:fontFamily="@font/amiko"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#B10C0C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:text="Create Trip"
            android:fontFamily="@font/amiko"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="60dp"
            android:text="Find Trips"
            android:fontFamily="@font/amiko"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#B10C0C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:text="Create Trip"
            android:fontFamily="@font/amiko"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="60dp"
            android:text="Create Request"
            android:fontFamily="@font/amiko"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#B10C0C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="Create Trip"
            android:fontFamily="@font/amiko"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="60dp"
            android:text="My Trips"
            android:fontFamily="@font/amiko"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#B10C0C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="Create Trip"
            android:fontFamily="@font/amiko"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>




</RelativeLayout>