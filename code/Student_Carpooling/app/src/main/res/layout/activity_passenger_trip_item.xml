<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassengerTripItem"
    android:background="@color/colorPrimaryDark"
    android:layout_above="@+id/relLayout1">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary"
            android:text="Trip Information"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/quantum_white_100"
            >




        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingTop="1.6dp"
        android:layout_marginTop="60dp"
        android:paddingBottom="15dp"
        >
        <TextView
            android:id="@+id/Starting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Starting "
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="@color/quantum_black_100"/>

        <TextView
            android:id="@+id/Destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Destination "
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="@color/quantum_black_100"/>


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/ic_date" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 01/01/2001"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@color/quantum_black_100"/>

            <ImageView
                android:id="@+id/clock"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/ic_time" />

            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=" Time"
                android:textSize="20sp"
                android:textColor="@color/quantum_black_100"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Driver"
            android:textStyle="bold"
            android:textColor="@color/quantum_googred700"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/DriverProfilePic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/DriverUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/DriverProfilePic"
                android:gravity="start"
                android:maxLines="1"
                android:text="username"
                android:textColor="@color/quantum_black_100"
                android:textSize="20sp" />


            <ImageView
                android:layout_toRightOf="@+id/DriverUserName"
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="end"
                app:srcCompat="@drawable/ic_person_black_24dp" />


            <ImageView
                android:id="@+id/message"
                android:layout_toRightOf="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:gravity="end"
                app:srcCompat="@drawable/ic_message_black_24dp" />



        </RelativeLayout>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingTop="1.6dp"
        android:layout_marginTop="60dp"
        android:paddingBottom="15dp"
        >

        <TextView
            android:text="Passengers"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/quantum_googred700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/passengerRecycler"
            android:visibility="visible"
            android:scrollbars="vertical"
            />

        <TextView
            android:id="@+id/text"
            android:text="This trip has no other passengers"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/quantum_black_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingTop="1.6dp"
        android:layout_marginTop="545dp"
        android:paddingBottom="15dp"
        >


        <Button
            android:visibility="visible"
            android:id="@+id/Track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Driver"
            android:textColor="@color/quantum_white_100"
            android:background="@android:color/holo_green_light"
            android:layout_gravity="center"/>


            <Button
                android:visibility="visible"
                android:id="@+id/Leave"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leave Trip"
                android:textColor="@color/quantum_white_100"
                android:background="@color/quantum_googred700"
                android:layout_gravity="center"/>
    </LinearLayout>


</RelativeLayout>