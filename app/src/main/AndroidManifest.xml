<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.student_carpooling">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ResetPassword"></activity>
        <activity
            android:name=".DriverCreate"
            android:label="@string/title_activity_driver_create"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DriverTrips"
            android:label="@string/title_activity_driver_trips"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserMessage"
            android:label="@string/title_activity_user_message"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DriverMain"
            android:label="@string/title_activity_driver_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserProfile"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PassengerActivity" />
        <activity android:name=".UserInstance" />
        <activity android:name=".Login" />
        <activity android:name=".Register" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>